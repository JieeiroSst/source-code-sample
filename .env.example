APP_NAME=hexagon-app
APP_ENV=development
APP_PORT=8080

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=hexagon_db
DB_SSL_MODE=disable

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_EXCHANGE=hexagon_exchange
RABBITMQ_QUEUE=hexagon_queue
RABBITMQ_ERROR_QUEUE=hexagon_error_queue
RABBITMQ_DEAD_LETTER_EXCHANGE=hexagon_dlx
RABBITMQ_MAX_RETRY=3

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_TTL=3600s

# Security
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRY=24h
API_KEY=your-api-key
RATE_LIMIT=100
RATE_LIMIT_WINDOW=1m

# Encryption
ENCRYPTION_KEY=32-character-encryption-key!!
